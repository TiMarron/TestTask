@model Employees.ViewModels.DepartmentViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_BaseView.cshtml";
}

<h2>Добавление отдела</h2>
<hr />
@using (Html.BeginForm("Add", "Department", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Floor, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.Floor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Floor, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <input type="submit" value="Добавить" class="btn btn-success" />
            <a href="/" class="btn btn-default">Вернуться на главную</a>
        </div>
    </div>
}