@model Employees.ViewModels.DepartmentViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_BaseView.cshtml";
}

<h2>Добавление отдела</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div>
        <div class="lable">@Html.LabelFor(m => m.Name)</div>
        @Html.EditorFor(m => m.Name)
    </div>
    <div>
        <div class="lable">@Html.LabelFor(m => m.Floor)</div>
        @Html.EditorFor(m => m.Floor)
    </div>
    <div>
        <input type="submit" value="Добавить" />
        <a href="/">Вернуться на главную</a>
    </div>
}