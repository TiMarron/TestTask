@model Employees.ViewModels.EmployeeAddViewModel

@{
    Layout = "~/Views/Shared/_BaseView.cshtml";
}

<div>
    <h2>Добавление сотрудника</h2>
    <hr />
    @using (Html.BeginForm("Add", "Employees", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-4">
                <input class="form-control" data-val="true" id="Name" name="Name" type="text" value="@Model.Name" data-autocomplete-source='@Url.Action("AutocompleteName", "Employees")'>
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SecondName, new {@class = "control-label col-md-1" })
            <div class="col-md-4">
                <input class="form-control" data-val="true" id="SecondName" name="SecondName" type="text" value="@Model.SecondName" data-autocomplete-source='@Url.Action("AutocompleteSecondName", "Employees")'>
                @Html.ValidationMessageFor(m => m.SecondName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Years, new { @class = "control-label col-md-1" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Years, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Years, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Sex,  new { @class = "control-label col-md-1" })
            <div class="col-md-4">
                @Html.DropDownList("Sex", new SelectList(new string[] {"Мужской", "Женский" }), "Выбери пол", new { @class = "form-control selectpicker" })
                @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DepartmentId, new { @class = "control-label col-md-1" })
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.DepartmentId, new SelectList(Model.DepartmentList, "Id", "Name", Model.DepartmentId), "Выберите отдел", new { @class = "form-control selectpicker" })
                @Html.ValidationMessageFor(m => m.DepartmentId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ProgrammingLanguageId, new { @class = "control-label col-md-1" })
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.ProgrammingLanguageId, new SelectList(Model.ProgrammingLanguageList, "Id", "Name", Model.ProgrammingLanguageId),"Выберите язык", new { @class = "form-control selectpicker" })
                @Html.ValidationMessageFor(m => m.ProgrammingLanguageId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-success"/>
                <a href="/" class="btn btn-default">Вернуться на главную</a>
            </div>
        </div>
    }
 </div>