@model Employees.ViewModels.EmployeeAddViewModel

@{
    Layout = "~/Views/Shared/_BaseView.cshtml";
}

<div>
    <h2>Добавление сотрудника</h2>
    @using (Html.BeginForm())
    {
        <div>
            <div class="lable">@Html.LabelFor(m => m.Name)</div>
            <input class="text-box single-line" data-val="true" id="Name" name="Name" type="text" value="" data-autocomplete-source='@Url.Action("AutocompleteSearch", "Employees")'>
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div>
            <div class="lable">
                @Html.LabelFor(m => m.SecondName)
            </div>
            @Html.EditorFor(m => m.SecondName)
            @Html.ValidationMessageFor(m => m.SecondName)
        </div>
        <div>
            <div class="lable">
                @Html.LabelFor(m => m.Years)
            </div>
            @Html.EditorFor(m => m.Years)
            @Html.ValidationMessageFor(m => m.Years)
        </div>
        <div>
            <div class="lable">
                @Html.LabelFor(m => m.Sex)
            </div>
            @Html.DropDownList("Sex", new SelectList(new[] {"Мужской", "Женский"}))
            @Html.ValidationMessageFor(m => m.Sex)
        </div>
        <div>
            <div class="lable">
                @Html.LabelFor(m => m.DepartmentSelectList)
            </div>
            @Html.DropDownListFor(m => m.DepartmentSelectList, Model.DepartmentSelectList)
            @Html.ValidationMessageFor(m => m.DepartmentSelectList)
        </div>
        <div>
            <div class="lable">
                @Html.LabelFor(m => m.ProgrammingLanguageSelectList)
            </div>
            @Html.DropDownListFor(m => m.ProgrammingLanguageSelectList, Model.ProgrammingLanguageSelectList)
            @Html.ValidationMessageFor(m => m.ProgrammingLanguageSelectList)
        </div>
        <div>
            <input type="submit" value="Добавить"/>
            <a href="/">Вернуться на главную</a>
        </div>
    }
</div>
    <script src='@Url.Content("~/Scripts/jquery-2.1.4.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery-ui-1.11.4.min.js")' type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("[data-autocomplete-source]").each(function () {
            var target = $(this);
            target.autocomplete({ source: target.attr("data-autocomplete-source") });
        });
    });
</script>