@model Employees.ViewModels.EmployeeEditViewModel

@{
    Layout = "~/Views/Shared/_BaseView.cshtml";
}
<div>
    <h2>Редактирование сотрудника</h2>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div>
            <div class="lable">@Html.LabelFor(m => m.Name)</div>
            <input class="text-box single-line" data-val="true" id="Name" name="Name" type="text" value="" data-autocomplete-source='@Url.Action("AutocompleteName", "Employees")'>
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div>
            <div class="lable">
                @Html.LabelFor(m => m.SecondName)
            </div>
            <input class="text-box single-line" data-val="true" id="SecondName" name="SecondName" type="text" value="" data-autocomplete-source='@Url.Action("AutocompleteSecondName", "Employees")'>
            @Html.ValidationMessageFor(m => m.SecondName)
        </div>
        <div>
            <div class="lable">
                @Html.LabelFor(m => m.Years)
            </div>
            @Html.EditorFor(m => m.Years)
            @Html.ValidationMessageFor(m => m.Years)
        </div>
            <div>
                <div class="lable">
                    @Html.LabelFor(m => m.Sex)
                </div>
                @Html.DropDownList("Sex", new SelectList(new[] { " ", "Мужской", "Женский" }))
                @Html.ValidationMessageFor(m => m.Sex)
            </div>
        <div>
            <div class="lable">
                @Html.LabelFor(m => m.DepartmentId)
            </div>
            @Html.DropDownListFor(m => m.DepartmentId, Model.DepartmentSelectList)
            @Html.ValidationMessageFor(m => m.DepartmentId)
            </div>
        <div>
            <div class="lable">
                @Html.LabelFor(m => m.ProgrammingLanguageId)
            </div>
            @Html.DropDownListFor(m => m.ProgrammingLanguageId, Model.ProgrammingLanguageSelectList)
            @Html.ValidationMessageFor(m => m.ProgrammingLanguageId)
            </div>
        <div>
            <input type="submit" value="Изменить" />
            <a href="/">Вернуться на главную</a>
        </div>
    }
</div>